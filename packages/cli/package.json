{
    "name": "@bunway/cli",
    "version": "0.1.0",
    "description": "Bunway CLI scaffolding tool",
    "type": "module",
    "bin": {
        "bunway": "./dist/bin/bunway. js"
    },
    "main": "./dist/index.js",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "bun build ./src/cli.ts --outdir ./dist --format esm",
        "dev": "bun src/cli.ts",
        "link": "bun link"
    },
    "dependencies": {
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "typescript": "^5.3.0"
    }
}